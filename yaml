version: "3.8"
services:
  backend:
    build: ./backend
    command: uvicorn main:app --host 0.0.0.0 --port 8000 --reload
    volumes:
      - ./backend:/app
      - ./db:/db
    ports:
      - "8000:8000"
  dashboard:
    build: ./dashboard
    command: streamlit run app.py --server.port 8501
    volumes:
      - ./dashboard:/app
    ports:
      - "8501:8501"
